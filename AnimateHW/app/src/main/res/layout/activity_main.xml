<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jjke.animatehw.MainActivity">

<Button
    android:id="@+id/bt1"
    android:textAllCaps="false"
    android:text="Move by ViewAnimation(XML)"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt2"
        android:textAllCaps="false"
        android:text="Move by ViewAnimation(Java Code)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt3"
        android:textAllCaps="false"
        android:text="Move by ObjectAnimator(XML)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt4"
        android:textAllCaps="false"
        android:text="Move by ObjectAnimator(Java Code)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<FrameLayout
    android:layout_below="@id/bt4"
    android:layout_marginTop="15dp"
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/iv2"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img2"
        android:visibility="gone"/>

</FrameLayout>

</LinearLayout>
